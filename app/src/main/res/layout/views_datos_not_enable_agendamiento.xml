<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/id_textview_fecha_inicio___"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="bold"
        android:textSize="@dimen/textsize_boton_login"
        android:gravity="center"
        android:drawableTint="@color/colorPrimaryDark"
        android:drawableStart="@drawable/fecha_agendar_cita"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
    </TextView>
    <TextView

        android:id="@+id/id_textview_hora_inicio___"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="bold"
        android:textSize="@dimen/textsize_boton_login"
        android:gravity="center"
        android:drawableTint="@color/colorPrimaryDark"
        android:drawableStart="@drawable/hora_agendar_cita"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
    </TextView>
    <TextView
        android:id="@+id/id_textview_actividad_inicio___"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="bold"
        android:textSize="@dimen/textsize_boton_login"
        android:gravity="center"
        android:drawableTint="@color/colorPrimaryDark"
        android:drawableStart="@drawable/actividad_agendar_cita"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
    </TextView>
    <TextView
        android:id="@+id/id_textview_detalle_inicio___"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:drawableTint="@color/colorPrimaryDark"
        android:drawableStart="@drawable/detalle_agendar_cita"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
    </TextView>
</LinearLayout>
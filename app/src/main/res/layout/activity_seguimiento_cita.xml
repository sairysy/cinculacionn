<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.SeguimientoCitaActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_imageview_seguimiento_cita___"
                android:src="@drawable/open_camera_open_galety"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/alto_imageview_activiti_seguimietno_cita">
            </androidx.appcompat.widget.AppCompatImageView>
            <include
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                layout="@layout/views_datos_not_enable_agendamiento">
            </include>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:enabled="false"
                    android:id="@+id/id_edittext_zona"
                    android:hint="Zona"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:enabled="false"
                    android:id="@+id/id_edittext_provincia"
                    android:hint="Provincia"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:enabled="false"
                    android:id="@+id/id_editext_distrito"
                    android:hint="Distrito"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:enabled="false"
                    android:id="@+id/id_edittext_unidad"
                    android:hint="Unidad"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginBottom="30dp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/id_btn_falta_cita"
                    android:textStyle="bold"
                    android:text="@string/btn_falta"
                    android:textSize="@dimen/textsize_boton_login"
                    android:theme="@style/RaisedButtonRedDark"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize">
                </androidx.appcompat.widget.AppCompatButton>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/id_btn_asistido_cita"
                    android:textStyle="bold"
                    android:text="@string/btn_asistido"
                    android:textSize="@dimen/textsize_boton_login"
                    android:theme="@style/RaisedButtonDark"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize">
                </androidx.appcompat.widget.AppCompatButton>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>